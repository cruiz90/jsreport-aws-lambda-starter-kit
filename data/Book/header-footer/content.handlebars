<html>

<head>
    <style>
        * {
            box-sizing: border-box;
        }
        html,
        body {
            margin: 0px;
            padding: 0px;
        }
        .main {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 100%;
            height: 100%;
        }
        .header {
            width: 100%;
            padding-top: 20px;
            border-bottom: 1px solid black;
        }
        .footer {
            display: flex;
            color: #4b4545;
            font-size: 14px;
            justify-content: space-between;
            width: 100%;
            padding-bottom: 20px;
        }
    </style>
    <meta charset="UTF-8">
</head>

<body>
    {{#each $pdf.pages}}
    {{#if @index}}
    <div style="page-break-before: always;"></div>
    {{/if}}
    <main class="main">
        <header></header>
        <footer class="footer">
            <span>{{../result.title}}</span>
            <span>{{getPageNumber @index}}</span>
            <!-- <span>Page {{getPageNumber @index}} of {{getTotalPages ../$pdf.pages}}</span> -->
        </footer>
    </main>
    {{/each}}
</body>

</html>